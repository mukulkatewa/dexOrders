{
  "info": {
    "name": "Order Execution Engine",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Routing Strategies",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/routing-strategies",
          "host": ["{{baseUrl}}"],
          "path": ["api", "routing-strategies"]
        }
      }
    },
    {
      "name": "Get Quote",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amountIn\": 10,\n  \"routingStrategy\": \"BEST_PRICE\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/quotes",
          "host": ["{{baseUrl}}"],
          "path": ["api", "quotes"]
        }
      }
    },
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amountIn\": 10,\n  \"orderType\": \"market\",\n  \"slippage\": 0.02,\n  \"routingStrategy\": \"BEST_PRICE\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders", "execute"]
        }
      }
    },
    {
      "name": "Get Orders",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/orders",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders"]
        }
      }
    },
    {
      "name": "Get Order By Id",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/orders/{{orderId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders", "{{orderId}}"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "orderId",
      "value": ""
    }
  ]
}
